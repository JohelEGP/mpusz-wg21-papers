{
    "extends": "../.markdownlint.json",
    "MD003": {
        "style": "consistent"
    },
    "MD007": {
        "indent": 4
    },
    "MD013": {
        "line_length": 100,
        "code_block_line_length": 118
    },
    "MD025": false,
    "MD032": true,
    "MD033": {
        "allowed_elements": [
            "pre",
            "table",
            "th",
            "tr",
            "td",
            "blockquote",
            "del",
            "ins",
            "dfn",
            "sup",
            "sub",
            "br"
        ]
    }
}